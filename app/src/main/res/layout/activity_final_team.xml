<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootFinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Fondo del campo (opcional) -->
    <ImageView
            android:id="@+id/imgFieldBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/football_field"
            android:contentDescription="@string/app_name" />

    <RelativeLayout
            android:id="@+id/contentFinal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

        <!-- Toggle entre campo y lista -->
        <Button
                android:id="@+id/btnToggleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VER ESTADÍSTICAS"
                android:layout_alignParentStart="true" />

        <!-- Campo con slots finales -->
        <RelativeLayout
                android:id="@+id/fieldLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/btnToggleView"
                android:layout_marginTop="8dp" />

        <!-- Lista final (oculta por defecto; se alterna con botón) -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFinalTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/btnToggleView"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        <!-- FAB: Nuevo equipo -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnNewTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                app:srcCompat="@android:drawable/ic_menu_rotate" />
    </RelativeLayout>

    <!-- ===== Drawer del BANQUILLO (derecha) ===== -->
    <FrameLayout
            android:id="@+id/benchPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/benchScrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:visibility="gone" />

        <LinearLayout
                android:id="@+id/benchDrawer"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="12dp"
                android:elevation="8dp">

            <TextView
                    android:id="@+id/txtBenchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banquillo (0/5)"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchSelected"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchOptions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
