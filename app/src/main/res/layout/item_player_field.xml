<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardSlot"
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/bg_slot_card"
        android:clickable="true"
        android:focusable="true">

        <!-- Imagen del jugador (cuando hay jugador) -->
        <ImageView
                android:id="@+id/imgPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@android:color/transparent" />

        <!-- Etiqueta inferior: nombre o POS cuando está vacío -->
        <TextView
                android:id="@+id/txtPlayerNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="6dp"
                android:text="Posición"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:gravity="center" />

        <!-- Icono elemento (opcional) -->
        <ImageView
                android:id="@+id/imgElement"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:layout_gravity="top|end"
                android:contentDescription="@string/app_name"
                android:src="@android:color/transparent" />
</FrameLayout>
