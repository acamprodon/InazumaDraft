<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/draftLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202a44">

    <!-- Título -->
    <TextView
            android:id="@+id/roundTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige una formación"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    <!-- Botones de formaciones (4 visibles) -->
    <LinearLayout
            android:id="@+id/formationButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/roundTitle"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:padding="8dp">

        <Button
                android:id="@+id/btnFormation1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F1" />

        <Button
                android:id="@+id/btnFormation2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F2" />

        <Button
                android:id="@+id/btnFormation3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F3" />

        <Button
                android:id="@+id/btnFormation4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F4" />
    </LinearLayout>

    <!-- Cuadrícula de jugadores disponibles (2x2) -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formationButtonsLayout"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:visibility="gone"
            android:background="#151c30" />

    <!-- Campo de fútbol para vista previa/uso futuro (si lo muestras en esta pantalla) -->
    <RelativeLayout
            android:id="@+id/fieldLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rvOptions"
            android:layout_above="@id/btnNext"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="@drawable/football_field" />

    <!-- Botón para confirmar equipo -->
    <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar equipo"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:backgroundTint="#ffcc00"
            android:textColor="#000000"
            android:textStyle="bold" />

</RelativeLayout>
