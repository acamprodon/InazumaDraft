<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootDraft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Fondo del campo (opcional) -->
    <ImageView
            android:id="@+id/imgFieldBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/football_field"
            android:contentDescription="@string/app_name" />

    <!-- Contenido principal -->
    <RelativeLayout
            android:id="@+id/contentDraft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

        <!-- Título de ronda / instrucciones -->
        <TextView
                android:id="@+id/roundTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige una formación"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp" />

        <!-- Botones de formación -->
        <LinearLayout
                android:id="@+id/formationButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roundTitle"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

            <Button
                    android:id="@+id/btnFormation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1" />

            <Button
                    android:id="@+id/btnFormation2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="F2" />

            <Button
                    android:id="@+id/btnFormation3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="F3" />

            <Button
                    android:id="@+id/btnFormation4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="F4" />
        </LinearLayout>

        <!-- Campo con slots -->
        <RelativeLayout
                android:id="@+id/fieldLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/formationButtonsLayout"
                android:layout_above="@+id/btnNext"
                android:layout_marginTop="12dp" />

        <!-- Grid de opciones (player pick) -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOptions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/formationButtonsLayout"
                android:layout_above="@+id/btnNext"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:clipToPadding="false" />

        <!-- Confirmar -->
        <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirmar equipo"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        <!-- Overlay para vista previa al mantener pulsado -->
        <View
                android:id="@+id/overlayPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA000000"
                android:visibility="gone" />
    </RelativeLayout>

    <!-- ===== Drawer del BANQUILLO (derecha) ===== -->
    <FrameLayout
            android:id="@+id/benchPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false">

        <!-- Scrim -->
        <View
                android:id="@+id/benchScrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:visibility="gone" />

        <!-- Drawer -->
        <LinearLayout
                android:id="@+id/benchDrawer"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="12dp"
                android:elevation="8dp">

            <TextView
                    android:id="@+id/txtBenchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banquillo (0/5)"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

            <!-- Lista VERTICAL: ocupa todo, 5 huecos a la vista -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchSelected"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            <!-- Picks secundarios (no usados) -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchOptions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />

            <!-- Botón cerrar eliminado -->
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
