<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootDraft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Fondo del campo -->
    <ImageView
            android:id="@+id/imgFieldBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/football_field"
            android:contentDescription="@string/app_name" />

    <!-- Contenido principal (campo, picks, confirmar, overlay-preview) -->
    <RelativeLayout
            android:id="@+id/contentDraft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

        <!-- Campo con slots (visible tras elegir capitán) -->
        <RelativeLayout
                android:id="@+id/fieldLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnNext"
                android:layout_marginBottom="8dp" />

        <!-- Grid de opciones (player pick) -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOptions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnNext"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone" />

        <!-- Confirmar -->
        <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirmar equipo"
                android:layout_alignParentBottom="true"
                android:layout_margin="12dp"
                android:visibility="gone" />

        <!-- Overlay de vista previa al mantener pulsado -->
        <View
                android:id="@+id/overlayPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA000000"
                android:visibility="gone" />
    </RelativeLayout>

    <!-- ===== Drawer del BANQUILLO (derecha) ===== -->
    <FrameLayout
            android:id="@+id/benchPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false">

        <View
                android:id="@+id/benchScrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:visibility="gone"
                android:clickable="true" />

        <LinearLayout
                android:id="@+id/benchDrawer"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:translationX="320dp"
                android:elevation="12dp"
                android:clickable="true">

            <TextView
                    android:id="@+id/txtBenchTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banquillo (0/5)"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchSelected"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBenchOptions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <!-- ===== Overlay centrado para elegir FORMACIÓN (2x2, botones grandes) ===== -->
    <FrameLayout
            android:id="@+id/formationOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

        <!-- oscurecer un poco el fondo -->
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000" />

        <!-- Tarjeta centrada -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/transparent">

            <!-- Título que usa DraftActivity (mismo id) -->
            <TextView
                    android:id="@+id/roundTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elige una formación"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp" />

            <!-- Contenedor de botones (mismo id que espera DraftActivity) -->
            <GridLayout
                    android:id="@+id/formationButtonsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                <Button
                        android:id="@+id/btnFormation1"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:text="F1"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:backgroundTint="#FFCC00"
                        android:textColor="#000000" />

                <Button
                        android:id="@+id/btnFormation2"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:text="F2"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:backgroundTint="#FFCC00"
                        android:textColor="#000000" />

                <Button
                        android:id="@+id/btnFormation3"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:text="F3"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:backgroundTint="#FFCC00"
                        android:textColor="#000000" />

                <Button
                        android:id="@+id/btnFormation4"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:text="F4"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:backgroundTint="#FFCC00"
                        android:textColor="#000000" />
            </GridLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
