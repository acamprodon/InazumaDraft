<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_marginVertical="4dp">

    <!-- Imagen del jugador -->
    <ImageView
            android:id="@+id/imgPlayer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:background="@android:color/darker_gray"
            android:clipToOutline="true" />

    <!-- Datos del jugador -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/txtPlayerName"
                    android:text="Nombre del jugador"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:id="@+id/imgElement"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Elemento" />
        </LinearLayout>

        <TextView
                android:id="@+id/txtPlayerPosition"
                android:text="PosiciÃ³n"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/txtStats"
                android:text="Tiro: 80 | Vel: 75 | Ctrl: 82 | Def: 70"
                android:textSize="13sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
