<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="#151c30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Título -->
    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige un jugador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

    <!-- Lista de opciones de jugador -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPickerOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />
    <!-- Overlay de vista previa (se gestiona por código) -->
    <FrameLayout
            android:id="@+id/pickerPreviewOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="#80000000"
            android:visibility="gone" />



    <!-- Pie informativo -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantén pulsado para previsualizar"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

</LinearLayout>
